.bkg{
  z-index: 99;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  transition: opacity .5s;
  background: rgba(0, 0, 0, 0.6);
}
.canvas{
  margin: 50rpx auto;
  margin-bottom: 0rpx;
}
.canvasImg{
  display: flex;
  width:90%;
  margin: 50rpx auto;
  margin-top: 0rpx;
}
.canvasImg .btn{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  flex-grow: 1;
  border: 2rpx solid #c1c1c1;
  box-sizing: content-box;
  background: #ffffff;
  justify-content: center;
}
.right{
  color:#f3c041 ;
}
