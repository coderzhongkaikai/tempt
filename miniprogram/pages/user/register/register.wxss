page{
  background:#f3c041;
}
.head_font{
  text-align: center;
}
.head_font i{
  display: block;
  font-size: 100rpx;
  color: #f3c041;
}
.head_bk{
  height: 480rpx;
  background: #f3c041;
display: flex;
justify-content: flex-start;
flex-direction: column;
align-items: center;
}
.block_card{
  height: 150rpx;
}
.menu_card{
  width: 90vw;
  margin: 80rpx auto;
  padding: 10rpx 0rpx;  
  background: #ffffff;
  border-radius: 50rpx;
}
.menu_box{
  margin: 30rpx 30rpx 20rpx 30rpx;
border-radius: 20rpx;
box-sizing: border-box;
}
.menu_list{
  height: 90rpx;  
  border-radius: 20rpx;
  background: #f7f7f7;
  display: flex;
  margin-top: 20rpx;
  align-items: center;
border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
font-size: 25rpx;
}
.menu_list .title{
  font-size: 30rpx;
color: #333333;
margin-right: 10rpx;
}
.menu_list .iconfont{
  color: #f6cd03;
  font-size: 60rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.btn{
    width: 500rpx;
    background-color: #f3c041;
    border-radius: 50rpx;
    color: #616456;
    font-size: 32rpx;
    margin: 50rpx auto;
    
}
.btn:active{
  opacity: 0.8;
}